{% extends "GSBmainBundle:Main:index.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class='col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6 well'>
                {% for message in app.flashes('notice_erreur') %}
                    <div class="flash-notice text-center alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if form is defined %}
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="text-center">
                                {{ form_label(form.famille) }}
                            </div>
                            <div class="col-xs-10 col-xs-offset-1">
                                {{ form_widget(form.famille) }}
                            </div>
                            {% if form.medicament is defined %}
                                <div class="col-xs-10 col-xs-offset-1 text-center">
                                    {% if form.leMedicament is not defined %}
                                        {{ form_label(form.medicament) }}
                                    {% endif %}
                                    {{ form_widget(form.medicament) }}
                                </div>
                            {% endif %}
                            {% if form.leMedicament is defined %}
                                <div class="col-xs-10 col-xs-offset-1 text-center">
                                    {{ form_label(form.leMedicament) }}
                                    {{ form_widget(form.leMedicament) }}
                                    <div id="Qte" class="row">
                                        <div class="col-xs-6">
                                        {{ form_label(form.qteOfferte) }}
                                        </div>
                                        <div class="col-xs-6">
                                        {{ form_widget(form.qteOfferte) }}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="text-center">
                                {{ form_widget(form.Continuer) }}
                                {{ form_widget(form.Annuler) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                {% endif %}
                {% if formModifier is defined %}
                    {{ form_start(formModifier) }}
                        <div class="row">
                            <div class="text-center">
                                <div class="col-xs-10 col-xs-offset-1 text-center">
                                {{ form_label(formModifier.famille) }}
                                {{ form_widget(formModifier.famille) }}
                                {{ form_label(formModifier.leMedicament) }}
                                {{ form_widget(formModifier.leMedicament) }}
                                <div id="Qte" class="row">
                                    <div class="col-xs-6">
                                    {{ form_label(formModifier.qteOfferte) }}
                                    </div>
                                    <div class="col-xs-6">
                                    {{ form_widget(formModifier.qteOfferte) }}
                                    </div>
                                </div>
                                {{ form_widget(formModifier.Valider) }}
                                {{ form_widget(formModifier.Annuler) }}
                                </div>
                            </div>
                        </div>
                    {{ form_end(formModifier) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

