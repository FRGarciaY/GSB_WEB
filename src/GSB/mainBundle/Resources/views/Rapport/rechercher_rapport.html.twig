{% extends "GSBmainBundle:Main:index.html.twig" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class='col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6 well'>
                {% for message in app.flashes('notice_erreur') %}
                    <div class="flash-notice text-center alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if form is defined %}
                    {{ form_start(form) }}
                    <div class="encadrement">
                        <div class='row'>
                            <div class="col-xs-12 text-center">
                                <label>Nom du praticien :</label>
                            </div>
                            <div class="col-xs-10 col-xs-offset-1 text-center">
                                {{ form_widget(form.nomPraticien) }}
                            </div>
                        </div>
                    </div>
                            <br>
                            <div class="encadrement">
                        <div class="row">
                            <div class="col-md-12 col-md-offset-0 col-xs-10 col-xs-offset-1 text-center">
                                <label>Date :</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1 text-center">
                                {{ form_label(form.dateDepart) }}
                            </div>
                            <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1 text-center">
                                {{ form_widget(form.dateDepart) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1 text-center">
                                {{ form_label(form.dateArrivee) }}
                            </div>
                            <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-1 text-center">
                                {{ form_widget(form.dateArrivee) }}
                            </div>
                        </div>
                            </div>
                        <div class="row">
                            <div class="col-xs-12 text-center">
                                {{ form_row(form.Valider) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                {% endif %}
                {% if form2 is defined %}
                    {#{ form(form2) }#}
                    {{ form_start(form2) }}
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 text-center">
                                {{ form_label(form2.idRapport) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 text-center">
                                {{ form_widget(form2.idRapport) }}
                            </div>
                        </div>
                        <div class="text-center">
                        {{ form_widget(form2.Valider) }}
                        </div>
                    {{ form_end(form2) }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

